<header id="top-header" class="top-header">
  <span class="site-name">
    <a href="/" title="Return to Home Page">CSE Motors</a>
  </span>

  <div id="tools" class="tools">
    <% if (loggedin) { %>
      <a href="/account/management" title="Manage your account">
        Welcome <%= user.account_firstname || 'Basic' %>
      </a>
      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>
  </div>
</header>


