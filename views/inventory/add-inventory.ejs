<% if (title) { %>
  <h1><%= title %></h1>

  <% if (messages.error) { %>
    <% messages.error.forEach(function(msg) { %>
      <div class="flash error"><%= msg %></div>
    <% }) %>
  <% } %>

  <% if (messages.success) { %>
    <% messages.success.forEach(function(msg) { %>
      <div class="flash success"><%= msg %></div>
    <% }) %>
  <% } %>



<form action="/inv/add-inventory" method="post" class="p-4 border rounded bg-light">
  <!-- Classification -->
  <div class="mb-3">
    <label for="classification_id" class="form-label">Classification</label>
    <select name="classification_id" id="classification_id" class="form-select" required>
      <option value="">-- Choose Classification --</option>
      <% classifications.forEach(classification => { %>
        <option value="<%= classification.classification_id %>">
          <%= classification.classification_name %>
        </option>
      <% }) %>
    </select>
  </div>

  <!-- Make -->
  <div class="mb-3">
    <label for="inv_make" class="form-label">Make</label>
    <input 
      type="text" 
      class="form-control" 
      id="inv_make" 
      name="inv_make" 
      placeholder="e.g. Toyota" 
      minlength="3" 
      required>
  </div>

  <!-- Model -->
  <div class="mb-3">
    <label for="inv_model" class="form-label">Model</label>
    <input 
      type="text" 
      class="form-control" 
      id="inv_model" 
      name="inv_model" 
      placeholder="e.g. Corolla" 
      minlength="3" 
      required>
  </div>

  <!-- Description -->
  <div class="mb-3">
    <label for="inv_description" class="form-label">Description</label>
    <textarea 
      class="form-control" 
      id="inv_description" 
      name="inv_description" 
      rows="3" 
      required></textarea>
  </div>

  <!-- Image Path -->
  <div class="mb-3">
    <label for="inv_image" class="form-label">Image Path</label>
    <input 
      type="text" 
      class="form-control" 
      id="inv_image" 
      name="inv_image" 
      placeholder="/images/vehicle/no-image.png" 
      value="/images/vehicle/no-image.png" 
      required>
  </div>

  <!-- Thumbnail Path -->
  <div class="mb-3">
    <label for="inv_thumbnail" class="form-label">Thumbnail Path</label>
    <input 
      type="text" 
      class="form-control" 
      id="inv_thumbnail" 
      name="inv_thumbnail" 
      placeholder="/images/vehicle/no-image.png" 
      value="/images/vehicle/no-image.png" 
      required>
  </div>

  <!-- Price -->
  <div class="mb-3">
    <label for="inv_price" class="form-label">Price</label>
    <input 
      type="number" 
      class="form-control" 
      id="inv_price" 
      name="inv_price" 
      placeholder="30000" 
      step="0.01" 
      required>
  </div>

  <!-- Year -->
  <div class="mb-3">
    <label for="inv_year" class="form-label">Year</label>
    <input 
      type="number" 
      class="form-control" 
      id="inv_year" 
      name="inv_year" 
      placeholder="2025" 
      pattern="\d{4}" 
      required>
  </div>

  <!-- Miles -->
  <div class="mb-3">
    <label for="inv_miles" class="form-label">Miles</label>
    <input 
      type="number" 
      class="form-control" 
      id="inv_miles" 
      name="inv_miles" 
      placeholder="10000" 
      required>
  </div>

  <!-- Color -->
  <div class="mb-3">
    <label for="inv_color" class="form-label">Color</label>
    <input 
      type="text" 
      class="form-control" 
      id="inv_color" 
      name="inv_color" 
      placeholder="e.g. Red" 
      required>
  </div>

  <!-- Submit -->
  <button type="submit" class="btn btn-primary">Add Vehicle</button>
</form>

<% } else { %>
  <% res.redirect('/') %>
<% } %>