
<h1><%= title %></h1>

<!-- Flash Messages -->
<% if (messages) { %>
  <% for (let type in messages) { %>
    <% messages[type].forEach(function(msg) { %>
      <div class="flash <%= type %>"><%= msg %></div>
    <% }) %>
  <% } %>
<% } %>

<%- VehicleMgtGrid %>
<!-- Vehicle Management Grid -->
<h2>Manage Inventory</h2>
<p>Select a classification from the list below</p>
<label for="classificationList">Choose a classification:</label>
<select id="classificationList">
  <% classifications.forEach(c => { %>
    <option value="<%= c.classification_id %>"><%= c.classification_name %></option>
  <% }) %>
</select>

<table id="inventoryDisplay"></table>
<noscript>JavaScript must be enabled to use this page.</noscript>
<script src="/js/inventory.js"></script>




