<main>
  <h1>Account Management</h1>

  <% if (notice && notice.length > 0) { %>
    <div class="notice"><%= notice %></div>
  <% } %>

  <!-- Greeting -->
  <h2>Welcome <%= account_firstname %></h2>

  <!-- Update Account Link (Visible to all) -->
  <p>
    <a href="/account/update/<%= account_id %>">Update Account Information</a>
  </p>

  <!-- Conditional rendering based on account_type -->
  <% if (account_type === 'Employee' || account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inventory/management">Access Inventory Management</a></p>
  <% } %>

</main>
